{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":preserveSemverRanges"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "app/code/**",
    "update/**"
  ],
  "packageRules": [
    {
      "groupName": "Hyva",
      "groupSlug": "hyva",
      "matchPackagePatterns": [
        "^hyva/"
      ],
      "enabled": false
    }
  ],
  "prHourlyLimit": 20,
  "enabledManagers": [
    "composer"
  ],
  "ignoreDeps": [
    "composer/composer"
  ]
}
