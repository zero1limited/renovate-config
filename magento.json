{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":preserveSemverRanges"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "app/code/**",
    "update/**"
  ],
  "packageRules": [
    {
      "groupName": "Bug Fixes",
      "groupSlug": "bug-fixes",
      "matchPackagePatterns": [
        "!/^hyva\//",
        "!/^hyva-themes\//",
        "!/^magento\//"
      ],
      "matchDepTypes": [
        "require"
      ],
      "rangeStrategy": "in-range-only" 
    }
  ],
  "prHourlyLimit": 20,
  "enabledManagers": [
    "composer"
  ],
  "ignoreDeps": [
    "composer/composer"
  ]
}
